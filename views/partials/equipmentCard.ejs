<article class="equipment-card" style="--accent:<%= equipment.accentColor %>">
  <div class="equipment-card__icon" aria-hidden="true">
    <span class="icon icon--<%= equipment.iconName %>"></span>
  </div>
  <div class="equipment-card__body">
    <header>
      <h3><%= equipment.name %></h3>
      <p class="equipment-card__location"><%= equipment.location %></p>
    </header>
    <ul class="equipment-card__meta">
      <li>Godziny: <strong><%= equipment.dailyStartHour %>:00 - <%= equipment.dailyEndHour %>:00</strong></li>
      <li>Czas: <strong><%= equipment.minDurationMinutes %> - <%= equipment.maxDurationMinutes %> min</strong></li>
    </ul>
    <div class="equipment-card__slots">
      <% if (slots.length === 0) { %>
        <p>Brak wolnych terminów w tym tygodniu</p>
      <% } else { %>
        <% slots.forEach((slot) => { %>
          <span class="chip">
            <%= slot.date %> • <%= slot.startTime %> - <%= slot.endTime %>
          </span>
        <% }) %>
      <% } %>
    </div>
    <a class="btn btn--primary" href="/equipment/<%= equipment.id %>/calendar">Zobacz kalendarz</a>
  </div>
</article>
